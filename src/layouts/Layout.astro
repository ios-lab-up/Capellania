---
import Navbar from "../components/Navbar";
import Footer from "../components/Footer";
---

<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.props.title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-page-color text-gray-900 h-full flex flex-col relative">
    <!-- Logotipo de la Universidad, ajustado en tamaño y posición -->
    <img
      src="/uplogo.png"
      alt="UP Logo"
      class="absolute top-24 left-4 h-24 w-24 object-contain z-50"
    />

    <Navbar />
    <main class="flex-grow max-w-7xl mx-auto p-8 mt-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
