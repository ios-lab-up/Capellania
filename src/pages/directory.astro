---
import Layout from "../layouts/Layout.astro";

const title = "Directorio";
---

<Layout title={title}>
  <section class="bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">
      Directorio de Capellanes
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        [
          {
            name: "Padre Juan Pérez",
            role: "Capellán Principal",
            email: "juan.perez@up.edu",
          },
          {
            name: "Padre Miguel Sánchez",
            role: "Capellán Auxiliar",
            email: "miguel.sanchez@up.edu",
          },
          {
            name: "Hermana Ana López",
            role: "Coordinadora de Actividades",
            email: "ana.lopez@up.edu",
          },
        ].map((person) => (
          <div class="bg-gray-100 p-6 rounded-lg shadow hover:bg-gray-200 transition-colors">
            <h2 class="text-xl font-semibold text-gray-800">{person.name}</h2>
            <p class="text-gray-600">{person.role}</p>
            <p class="text-gray-600">{person.email}</p>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
